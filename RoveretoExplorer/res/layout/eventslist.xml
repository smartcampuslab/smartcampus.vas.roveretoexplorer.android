<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/my_events_no_results"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" 
            android:visibility="gone">

            <TextView
                android:id="@+id/my_events_no_results_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center_horizontal|bottom"
                android:padding="15dp"
                android:paddingTop="36dp"
                android:text="@string/empty_my_events_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/empty_color" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:src="@drawable/my_events_empty" />

            <TextView
                android:id="@+id/my_events_no_results_2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center_horizontal|top"
                android:padding="15dp"
                android:paddingTop="36dp"
                android:text="@string/empty_my_events_2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/empty_color" />
        </LinearLayout>

    <TextView
        android:id="@+id/events_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="@string/content_empty"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/events_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    </ListView>

</RelativeLayout>